<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>MDblist Config UI</title>
  <style>
    body { font-family: Arial, sans-serif; max-width: 600px; margin: 2rem auto; padding: 0 1rem; }
    h1 { text-align: center; }
    label { display: block; margin: .5rem 0; }
    #lists { margin: 1rem 0; max-height: 300px; overflow-y: auto; border: 1px solid #ccc; padding: .5rem; }
    textarea { width: 100%; height: 4rem; }
    button { margin-top: .5rem; padding: .5rem 1rem; }
  </style>
</head>
<body>
  <h1>MDblist Config UI</h1>
  <label>
    Twoje API Key:
    <input type="text" id="apiKey" placeholder="w0ys7vrr14k2obu5ar6rsvvq3" style="width:100%;">
  </label>
  <button id="load">Załaduj listy</button>
  <div id="lists"></div>
  <label>
    Wybrane slugi (skopiuj do Stremio):
    <textarea id="output" readonly placeholder="slug1,slug2"></textarea>
  </label>

  <script>
    document.getElementById('load').addEventListener('click', async () => {
      const key = document.getElementById('apiKey').value.trim();
      if (!key) return alert('Podaj API Key');
      const res = await fetch(`https://api.mdblist.com/lists?apiKey=${key}`);
      if (!res.ok) return alert('Błąd pobierania list: ' + res.statusText);
      const { lists } = await res.json();
      const container = document.getElementById('lists');
      container.innerHTML = '';
      lists.forEach(list => {
        const cb = document.createElement('input');
        cb.type = 'checkbox'; cb.value = list.slug;
        cb.id = 'cb-' + list.slug;
        const label = document.createElement('label');
        label.htmlFor = cb.id;
        label.textContent = `${list.title} (${list.slug})`;
        container.appendChild(cb);
        container.appendChild(label);
        container.appendChild(document.createElement('br'));
      });
      container.addEventListener('change', () => {
        const slugs = Array.from(container.querySelectorAll('input:checked')).map(cb => cb.value);
        document.getElementById('output').value = slugs.join(',');
      });
    });
  </script>
</body>
</html>
